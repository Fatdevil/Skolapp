{
  "name": "skolapp-dropin-agents",
  "version": "0.4.1",
  "private": true,
  "type": "module",
  "workspaces": [
    "backend"
  ],
  "scripts": {
    "build": "echo \"(lägg till build-kommandon)\"",
    "lint": "echo \"(lägg till eslint)\" && exit 0",
    "typecheck": "echo \"(lägg till tsc --noEmit)\" && exit 0",
    "test": "npm run --workspace backend test -- && npm run frontend:test",
    "frontend:test": "npm test --prefix frontend",
    "test:ui": "playwright test tests/ui-report.spec.ts",
    "admin:promote": "ts-node scripts/admin/promote-user.ts",
    "prepare": "echo 'skipping playwright install (backend tests only)'",
    "postinstall": "npm install --prefix backend --no-fund --no-audit --no-progress && npm install --prefix frontend --no-fund --no-audit --no-progress"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2",
    "@rollup/rollup-linux-x64-gnu": "^4.52.5",
    "@vitest/coverage-v8": "^3.2.4",
    "pptxgenjs": "^3.12.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4"
  }
}
