{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "react"],
    "paths": {
      "react-native-safe-area-context": ["./types/react-native-safe-area-context"],
      "react-native-safe-area-context/*": ["./types/react-native-safe-area-context/*"],
      "react-native": ["./types/react-native"],
      "react-native/*": ["./types/react-native/*"]
    }
  },
  "include": [
    "App.tsx",
    "src/**/*",
    "__tests__/**/*",
    "jest.setup.ts",
    "types/**/*.d.ts"
  ]
}
